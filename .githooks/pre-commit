#!/bin/bash
# Pre-commit hook for RxInferKServe.jl
# Runs JuliaFormatter on staged Julia files

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo "üîç Running JuliaFormatter pre-commit hook..."

# Check if Julia is installed
if ! command -v julia &> /dev/null; then
    echo -e "${RED}‚ùå Julia is not installed or not in PATH${NC}"
    exit 1
fi

# Check if JuliaFormatter is installed
if ! julia -e 'using Pkg; Pkg.status("JuliaFormatter")' &> /dev/null; then
    echo -e "${YELLOW}‚ö†Ô∏è  JuliaFormatter not found. Installing...${NC}"
    julia -e 'using Pkg; Pkg.add("JuliaFormatter")'
fi

# Get list of staged Julia files
STAGED_JL_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.jl$')

if [ -z "$STAGED_JL_FILES" ]; then
    echo -e "${GREEN}‚úÖ No Julia files to format${NC}"
    exit 0
fi

echo "üìù Formatting staged Julia files..."

# Run formatter on each staged file
FORMATTED=false
for FILE in $STAGED_JL_FILES; do
    if [ -f "$FILE" ]; then
        echo "  - Formatting $FILE"
        if julia -e "using JuliaFormatter; format(\"$FILE\")"; then
            # Check if file was modified
            if ! git diff --quiet "$FILE"; then
                FORMATTED=true
                git add "$FILE"
            fi
        else
            echo -e "${RED}‚ùå Failed to format $FILE${NC}"
            exit 1
        fi
    fi
done

if [ "$FORMATTED" = true ]; then
    echo -e "${YELLOW}üìã Files were formatted and re-staged${NC}"
    echo -e "${YELLOW}   Please review the changes before committing${NC}"
else
    echo -e "${GREEN}‚úÖ All files are properly formatted${NC}"
fi

exit 0